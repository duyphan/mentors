<h1>Listing example_posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @example_posts.each do |example_post| %>
      <tr>
        <td><%= example_post.title %></td>
        <td><%= example_post.content %></td>
        <td><%= link_to 'Show', example_post %></td>
        <td><%= link_to 'Edit', edit_example_post_path(example_post) %></td>
        <td><%= link_to 'Destroy', example_post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

